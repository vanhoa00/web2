<div class="card shadow mb-4">
  <h4 class="card-header">
    Products
  </h4>

  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">
      Không có dữ liệu.
    </p>
  </div>
  {{else}}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Hình ảnh</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Giá</th>
        <th scope="col">Số lượng</th>
        <th scope="col">Danh mục</th>
        <th scope="col" class="text-right">
          <a class="btn btn-outline-success" href="/admin/products/add" role="button">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add Product
          </a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each this.products}}
      <tr>
        <th scope="row" class="text-center">{{id}}</th>
        <td ><img src="{{image}}" height="80px" width="80px"></td>
        <td class="text-left">{{name}}</td>
        
        <td >{{unitprice}}</td>
        <td >{{qty}}</td>
        <td >abc</td>
        <td class="text-right">
          <a class="btn btn-sm btn-primary" href="/admin/products/edit/{{id}}" role="button">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}

</div>