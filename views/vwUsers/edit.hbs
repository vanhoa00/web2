<div class="mt-4 mb-4 text-left">
<form method="POST">
  <div class="form-row mr-5">
    <div class="form-group col-md-4">
        <label for="Name">Tên người dùng</label>
        <input type="text" class="form-control" id="Name" name="Name" value="{{user.name}}">
      </div>
    <div class="form-group col-md-4">
      <label for="SDT">Số điện thoại</label>
      <input type="number" class="form-control" id="SDT" name="SDT" value="{{user.Phone}}">
    </div>
    {{!-- chưa validate --}}
    <div class="form-group col-md-4">
      <label for="DOB">Ngày sinh</label>
      <input type="text" class="form-control" id="DOB" name="DOB" value="{{dateformat user.DateOfBirth}}">
    </div>
    <div class="form-group col-md-4">
      <label for="Username">Username</label>
      <input type="text" class="form-control" id="Username" name="Username" readonly value="{{user.username}}">
    </div>
    {{!-- chưa validate email --}}
    <div class="form-group col-md-4">
      <label for="email">Email</label>
      <input type="text" class="form-control" id="email" name="email" value="{{user.email}}">
    </div>
    <div class="form-group col-md-4">
      <label for="Permission">Loại người dùng</label>
      <input type="text" class="form-control" id="Permission" name="Permission" readonly value="{{#ifCond Permission 1}}Seller{{else}}Bidder{{/ifCond}}">
    </div>
  </div>
  <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox"{{#ifCond user.status 1}} checked {{/ifCond}} value="1" name="status" id="status">
            <label class="form-check-label" for="invalidCheck">
                Hiển thị
            </label>
        </div>
    </div>
    <button class="btn btn-primary" type="submit" formaction="/admin/users/patch">Ghi</button>
    <a class="btn btn-dark" href="/admin/users">Bỏ qua</a>
</form>
</div>