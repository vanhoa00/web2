{{#section 'css'}}
<link rel="stylesheet" href="/assets/css/main.css">
<link rel="stylesheet" href="/assets/css/util.css">
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
</script>
<script src='https://www.google.com/recaptcha/api.js'></script>
<script>
	$('#txtDOB').datetimepicker({
		// format: 'd/m/Y H:i'
		format: 'd/m/Y',
		timepicker: false,
		mask: true,
	});
</script>
<script>
    document.title = "Register";
</script>
{{/section}}

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-30 p-b-30">
			<form class="login100-form validate-form" method="POST">
				<span class="login100-form-title p-b-10">
					Chỉnh sửa thông tin
				</span>
				{{#if err_message}}
				<div class="alert alert-warning alert-dismissible fade show" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					{{err_message}}
				</div>
				{{/if}}

				<div class="row">
					<div class="row">
						<div class="form-group">
							<div class="col-lg-12">
								<input type="text" class="form-control" name="username" id="username" readonly
									style="width: 420px;" placeholder="UserName" value="{{user.username}}">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-12">
								<input type="text" class="form-control" name="name" id="name" style="width: 420px;"
									placeholder="Họ tên" value="{{user.name}}">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-12">
								<input type="text" class="form-control" name="Email" id="Email" style="width: 420px;" 
									placeholder="Email" value="{{user.email}}">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-12">
								<input type="text" class="form-control" name="Phone" id="" style="width: 420px;"
									placeholder="Số di động" value="{{user.Phone}}">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group">
							<div class="col-lg-12">
								<input type="text" class="form-control" name="DateOfBirth" id="txtDOB"
									style="width: 420px;" placeholder="Ngày sinh" data-format="yyyy-MM-dd" value="{{dateformat user.DateOfBirth}}">
							</div>
						</div>
					</div>
					
					{{!-- <div class="form-group col-md-4">
						<!-- add your domain data-sitekey below-->
						<div class="g-recaptcha" data-sitekey="6LfaQMwUAAAAAOjpylnrk3VSs8-kEOmJ45lMbNHf"></div>
					</div> --}}
				</div>
				<div class="row">
					<button id="Success" type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
